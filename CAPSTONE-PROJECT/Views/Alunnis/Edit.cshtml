@model CAPSTONE_PROJECT.Models.Alunni

@{
    ViewBag.Title = "Edit";
}

<h2 class="m-4">Modifica alunno n.@Model.IdAlunno</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal my-form">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdAlunno)

        <div class="form-group">
            @Html.LabelFor(model => model.FKDomandaIscrizione, "FKDomandaIscrizione", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FKDomandaIscrizione", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FKDomandaIscrizione, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FKPagamento, "FKPagamento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FKPagamento", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FKPagamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FKClasse, "FKClasse", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FKClasse", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FKClasse, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salva modifiche" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="m-4">
    @Html.ActionLink("Torna alla lista alunni", "Index")
</div>
