@model CAPSTONE_PROJECT.Models.DomandeIscrizione

@{
    ViewBag.Title = "Dettagli";
}

@if (@TempData["Edit"] != null)
{
    <h4 class="m-4" style="color: #00928E">@TempData["Edit"].ToString()</h4>
}
else
{
    <h2 class="m-4">Domanda n. @this.Model.IdDomanda</h2>
}

<div class="my-form">
    @Html.Partial("_DomandaIscrDetails")
    <p>
        @Html.ActionLink("Modifica", "Edit", new { id = Model.IdDomanda }) |
        @Html.ActionLink("Torna all'elenco domande", "Index")
    </p>
</div>
